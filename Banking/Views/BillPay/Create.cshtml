@model BillPayEditViewModel
@{
    ViewData["Title"] = "Schedule a New Bill Pay";
}
<div>
    <h2 class="display-4">Bill Pay</h2>
</div>
<form asp-action="BillPay">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="PayeeID" class="control-label"></label>
        <input asp-for="PayeeID" class="form-control" value="@Model.PayeeID.ToString("0")"
               data-val="true" data-val-number="The Payee ID must be a number."
               data-val-required="The Payee ID is required." />
    </div>
        <div>
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" value="@Model.Amount.ToString("0.00")"
               data-val="true" data-val-number="The field Amount must be a number."
               data-val-required="The Amount field is required." />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ScheduleDate" class="control-label"></label>
        <input asp-for="ScheduleDate" class="form-control" value="@Model.Amount.ToString("dd/MM/yyyy")"
               data-val="true" data-val-number="The Schedule Date must be format: dd/MM/yyyy."
               data-val-required="The Schedule Date is required." />
    </div>

    <div>
        <label asp-for="Period" class="control-label"></label>
        <select asp-for="Period" asp-items="@Model.PeriodSelect"></select>
        <span asp-validation-for="Period" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
</form>

<div class="form-group">
    <input type="submit" value="Save Information and Pay" class="btn btn-primary" />
</div>
<div>
    <a asp-action="Index">Cancel Transfer</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}