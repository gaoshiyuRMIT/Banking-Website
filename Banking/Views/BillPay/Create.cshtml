@model BillPayEditViewModel
@{
    ViewData["Title"] = "Schedule a New Bill Pay";
}

<h1>Create</h1>
<h4>Bill Pay</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountType" class="control-label"></label>
                <select asp-for="AccountType" asp-items="Model.AccountTypes" class="form-control"></select>
                <span asp-validation-for="AccountType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Payee</label>
                @if (Model.Payee != null)
                {
                    <div class="p-2">
                        <label asp-for="Payee.Name" class="control-label"></label>
                        <input readonly asp-for="Payee.Name" class="form-control" />
                        <label asp-for="Payee.Address" class="control-label"></label>
                        <input readonly asp-for="Payee.Address" class="form-control" />
                    </div>
                }
                <div class="list-group">
                    <input type="submit" asp-action="EditOrCreateToPayeeCreate" value="Add a New Payee" class="list-group-item list-group-item-action" />
                    <input type="submit" asp-action="EditOrCreateToPayee" value="Choose From History" class="list-group-item list-group-item-action" />
                </div>
                <span asp-validation-for="Payee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="Create" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>
        <a asp-action="Index">Back to List</a>
    </p>
    <p>
        <a asp-action="Index" asp-route-discard="1">Abort</a>
    </p>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
