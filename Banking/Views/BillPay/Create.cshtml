@model BillPayEditViewModel
@{
    ViewData["Title"] = "Schedule a New Bill Pay";
}
<div>
    <h2 class="display-4">Bill Pay</h2>
</div>
<form asp-action="BillPay">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="AccountType" class="control-label"></label>
        <select asp-for="AccountType" asp-items="Model.AccountTypes"></select>
    </div>
    <div>
        @*<label asp-for="AccountType" class="control-label"></label>*@

        <label asp-for="BillPayID" class="control-label"></label>
        <select asp-for="BillPayID" asp-items="Model.BillPayEditOp"></select>



        @*<input asp-for="BillPayID" class="form-control" />*@
        @*<span asp-validation-for="BillPayID" class="text-danger"></span>*@
    </div>

    <div>
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" value="@Model.Amount.ToString("0.00")"
               data-val="true" data-val-number="The field Amount must be a number."
               data-val-required="The Amount field is required." />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="ScheduleDate" class="control-label"></label>
        <input asp-for="ScheduleDate" class="form-control" value="@Model.Amount.ToString("0.00")"
               data-val="true" data-val-number="The field Amount must be a number."
               data-val-required="The Amount field is required." />

    </div>

    <div>
        <label asp-for="Period" class="control-label"></label>
        <select asp-for="Period" asp-items="Model.BillPayPeriod"></select>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label"></label>
        <input asp-for="Comment" class="form-control" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
</form>

<div class="form-group">
    <input type="submit" value="Save Information" class="btn btn-primary" />
</div>
<div>
    <a asp-action="Index">Cancel Transfer</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
