@model Customer

@{
    ViewData["Title"] = "Accounts";
}
    <div class="row">
        <div class="col-md-4">
            <div>
                <h2 class="display-4">Accounts</h2>
                
                    <form asp-action="Accounts">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group"></div>
                    </form>

                    @if (Model.Accounts.Exists(x => x.AccountType == AccountType.Savings))
                    {
                        <div>
                            @{
                                var Account = Model.Accounts.Find(x => x.AccountType == AccountType.Savings);
                            }

                            <table class="table">

                                <tr>
                                    <th>@Html.DisplayNameFor(x => Account.AccountNumber) </th>
                                    <td>@Html.DisplayFor(x => Account.AccountNumber)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => Account.AccountType)</th>
                                    <td>@Html.DisplayFor(x => Account.AccountType)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => Account.Balance)</th>
                                    <td>@Html.DisplayFor(x => Account.Balance)</td>
                                </tr>



                            </table>
                        </div>
                    }


                    @if (Model.Accounts.Exists(x => x.AccountType == AccountType.Checking))
                    {
                        <div>
                            @{
                                var Account = Model.Accounts.Find(x => x.AccountType == AccountType.Checking);

                            }
                            <table class="table">

                                <tr>
                                    <th>@Html.DisplayNameFor(x => Account.AccountNumber) </th>
                                    <td>@Html.DisplayFor(x => Account.AccountNumber)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => Account.AccountType)</th>
                                    <td>@Html.DisplayFor(x => Account.AccountType)</td>
                                </tr>
                                <tr>
                                    <th>@Html.DisplayNameFor(x => Account.Balance)</th>
                                    <td>@Html.DisplayFor(x => Account.Balance)</td>
                                </tr>



                            </table>
                        </div>
                    }

                </div>

            </div>
        </div>

                @section Scripts {
                    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
                }
