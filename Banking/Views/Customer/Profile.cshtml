@model ProfileViewModel

@{

    ViewData["Title"] = "Profile";
}
    <div class="row">
        <div class="col-md-4">
            <div>
                <h2 class="display-4">Profile</h2>

                <form asp-action="Profile">
                   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" value="@Model.Name.ToString()" />
                    </div>

                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" value="@Model.Address.ToString()"/>
                        </div>

                        
                                <div class="form-group">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>
</form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to account</a>
    </div>