@model ProfileViewModel

@{

    ViewData["Title"] = "Profile";
}
    <div class="row">
        <div class="col-md-4">
            <div>
                <h2 class="display-4">Profile</h2>

                <form asp-action="Profile">
                   
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <span>@Model.Customer.Name</span>

                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <span>@Model.Customer.Address.</span>
                        </div>

                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <span>@Model.Customer.City</span>
                        </div>

                        <div class="form-group">

                            <label asp-for="State" class="control-label"></label>
                            <span>@Model.Customer.State</span>
                        </div>

                        <div class="form-group">
                            <label asp-for="PostCode" class="control-label"></label>
                            <span>@Model.Customer.PostCode</span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label"></label>
                            <span>@Model.Customer.Phone</span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TFN" class="control-label"></label>
                            <span>@Model.Customer.TFN</span>
                        </div>
                    </div>
                                <div class="form-group">
                                    <input type="submit" value="Edit" class="btn btn-primary" />
                                </div>
</form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to account</a>
    </div>