@model StatementsViewModel
@{
    ViewData["Title"] = "Statements";
}

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Statement">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="AccountType" class="control-label"></label>
                    <span>@Model.AccountType</span>
                </div>

                <div class="form-group">
                    <label asp-for="Balance" class="control-label"></label>
                    <span>@Model.Balance</span>
                </div>
                <div class="form-group">
                    <label asp-for="Transactions" class="control-label"></label>
                    <span>@Model.Transactions</span>
                </div>
            </form>
        </div>
    </div>

   